{
  "name": "Monitoring-app",
  "version": "0.0.1",
  "description": "An app for viewing monitoring data",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^5.2.0",
    "bistre": "^1.0.1",
    "brfs": "~1.3.0",
    "browserify": "^9.0.8",
    "budo": "^4.0.0",
    "buildbranch": "0.0.3",
    "copyfiles": "^0.2.1",
    "crx": "~3.0.2",
    "jstify": "^0.9.0",
    "mkdirp": "^0.5.1",
    "opnr": "^1.0.4",
    "postcss-cli": "^1.3.1",
    "postcss-import": "^5.2.2",
    "postcss-url": "^3.2.0",
    "rimraf": "^2.3.4"
  },
  "dependencies": {
    "backbone": "^1.1.2",
    "backbone-github": "git://github.com/digidem/backbone-github",
    "crossfilter": "^1.3.11",
    "d3": "3",
    "leaflet": "^0.7.3",
    "lodash": "^3.1.0"
  },
  "scripts": {
    "dev": "budo js/index.js:bundle.js --dir dist --live -- -t [ jstify --engine lodash ]",
    "open": "npm run dev | opnr | bistre",
    "start": "npm run dev | bistre",
    "build": "copyfiles index.html dist && npm run build:css && npm run build:js",
    "prebuild": "rimraf dist && mkdirp dist",
    "build:css": "postcss --use postcss-import --use autoprefixer --use postcss-url --postcss-url.url inline css/index.css > dist/bundle.css",
    "build:js": "browserify js/index.js -t [ jstify --engine lodash ] | uglifyjs -mc > dist/bundle.js",
    "prebuild:js": "jshint js/mapfilter",
    "deploy": "buildbranch gh-pages dist",
    "predeploy": "npm run build",
    "chrome": "copyup chrome/* dist && crx pack dist -o dist/mapfilter.crx",
    "prechrome": "npm run build"
  },
  "jshintConfig": {
    "globals": {
      "require": false,
      "module": false,
      "exports": false,
      "console": false,
      "$": false,
      "t": false,
      "L": false
    },
    "predef": [
      "-Map",
      "-Worker"
    ],
    "newcap": false,
    "browser": true,
    "node": true,
    "globalstrict": true,
    "trailing": true,
    "undef": true,
    "unused": true,
    "debug": true,
    "esnext": true
  }
}
